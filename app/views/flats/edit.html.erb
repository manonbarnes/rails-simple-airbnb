<div class="container">
  <h1> Edit the flat</h1>
  <%= simple_form_for (@flat) do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :address %>
    <%= f.input :number_of_guests %>
    <%= f.input :price_per_night %>
    <%= f.submit "Submit flat", class: "btn btn-primary" %>
  <% end %>
</div>
